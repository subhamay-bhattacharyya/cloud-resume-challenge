{
  "name": "Terraform Tools Dev Container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "postCreateCommand": "echo 'Skipping heavy installs at post-create; image build contains tools.' > /tmp/post-create.log 2>&1",
  "postStartCommand": "bash .devcontainer/write-tf-sa-key.sh > /tmp/devcontainer-poststart.log 2>&1 || true",
  "containerEnv": {
    "TERRAFORM_SA_KEY": "${localEnv:TERRAFORM_SA_KEY}"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "hashicorp.terraform",
        "ms-azuretools.vscode-docker",
        "GitHub.copilot",
        "ms-python.python",
        "mechatroner.rainbow-csv",
        "vscode.json-language-features",
        "ms-vscode.vscode-node-azure-pack"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/go:1": {
      "version": "1.21"
    }
  }
}